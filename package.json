{
  "name": "cooking-blog",
  "private": true,
  "description": "A cooking blog",
  "version": "0.1.0",
  "author": "Aaron McTavish",
  "dependencies": {
    "gatsby": "2.23.9",
    "gatsby-image": "2.4.8",
    "gatsby-plugin-codegen": "1.1.0",
    "gatsby-plugin-feed": "2.5.6",
    "gatsby-plugin-manifest": "2.4.13",
    "gatsby-plugin-react-helmet": "3.3.5",
    "gatsby-plugin-sass": "2.3.5",
    "gatsby-plugin-sharp": "2.6.13",
    "gatsby-remark-images": "3.3.12",
    "gatsby-source-filesystem": "2.3.13",
    "gatsby-transformer-remark": "2.8.18",
    "gatsby-transformer-sharp": "2.5.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "6.1.0",
    "sass": "1.26.8"
  },
  "devDependencies": {
    "@types/react": "16.9.38",
    "@types/react-helmet": "6.0.0",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.3.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsdoc": "28.0.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "gatsby-plugin-sitemap": "2.4.6",
    "gh-pages": "3.0.0",
    "husky": "4.2.5",
    "markdown-spellcheck": "1.3.1",
    "markdownlint-cli": "0.23.1",
    "prettier": "2.0.5",
    "typescript": "3.9.5"
  },
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "deploy": "gatsby build && gh-pages -d public",
    "develop": "gatsby develop -H $(hostname) -p 8000",
    "format": "npm run format:eslint && npm run format:prettier && npm run format:markdown && npm run format:spelling",
    "format:ci": "npm run format:eslint:ci && npm run format:prettier:ci && npm run format:markdown && npm run format:spelling",
    "format:eslint": "eslint --fix \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:eslint:ci": "eslint \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:markdown": "markdownlint \"blog/**/*.md\"",
    "format:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,scss}\"",
    "format:prettier:ci": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,scss}\"",
    "format:spelling": "mdspell './blog/**/*.md' --en-gb --report",
    "preinstall": "npx npm-force-resolutions",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aamct2/cooking-blog"
  },
  "resolutions": {
    "marked": "0.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:ci"
    }
  }
}
